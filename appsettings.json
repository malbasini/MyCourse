{
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 5242880
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Data Source=Data/MyCourse.db"
  },
  "Courses": {
    "PerPage": 10,
    "InHome": 3,
    "Order": {
      "By": "Rating",
      "Ascending": false,
      "Allow": ["Id", "Title", "Rating", "CurrentPrice"]
    }
  },
  "ResponseCache": {
    "Home": {
      "Duration": 60,
      "Location": "Client",
      "VaryByQueryKeys": ["page"]
    }
  },
  "IMemoryCache": {
    "FromSecond": 60
  },
  "Smtp": {
    "Port": 2525,
    "Security": "None",
    "Sender": "MyCourse<noreply@example.org>",
    "Host": "sandbox.smtp.mailtrap.io",
    "User": "Utente creato in Mail Trap",
    "Password":"Password creata in Mail Trap"
  },
  "ReCaptcha": {
    "SecretKey": "File README.md",
    "SiteKey": "File README.md",
    "Version": "v2"
  },
  "Users": {
    "AssignAdministratorRoleOnRegistration": "admin@example.com",
    "NotificationEmailRecipient": "boss@example.com"
  }
  
}